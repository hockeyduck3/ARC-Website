{{!-- Title --}}
<h1 class="galleryTitle">Media Gallery</h1>

<div class="container">
    <div class="highlight">
        {{!-- Check to see if the highlight is a video --}}
        {{#if (video highlight)}}
            <iframe src={{highlight}} frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        {{else}}
            <div class="imageHighlight" style="background-image: url({{highlight}});"></div>
        {{/if}}
    </div>

    <div class="row galleryRow">
            {{#each mediaFile}}
                {{#if (video this)}}
                    <div class="col-md-4"> 
                        <iframe src={{this}} frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                {{else}}
                    <div class="col-md-4">
                        <div class="galleryImage" style="background-image: url({{this}});"></div>
                    </div>
                {{/if}}
            {{/each}}
    </div>
</div>
